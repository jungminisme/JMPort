{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "cpp debug build",
			"command": "/usr/bin/g++-11",
			"args": [
				"-std=c++17",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "디버그 작업입니다."
		},
		{
			"type": "cppbuild",
			"label": "Rebuild all with debug mode",
			"command": "/usr/bin/g++-11", 
			"args": [
				"-std=c++17",
				"-g",
				"${fileDirname}/*.cpp",
				"-I",
				"${workspaceFolder}/common",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"detail": "테스트의 디버그 빌드 입니다. "
		}
	]
}